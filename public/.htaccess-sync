# Increase execution time for sync operations
<Files "*.php">
    php_value max_execution_time 600
    php_value memory_limit 1024M
    php_value max_input_time 600
</Files>

# For specific Livewire routes
<LocationMatch "/livewire">
    php_value max_execution_time 600
    php_value memory_limit 1024M
</LocationMatch>